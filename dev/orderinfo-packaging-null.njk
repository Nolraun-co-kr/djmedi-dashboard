{% extends 'layout/base-dashboard.njk' %}
{% block content %}
  <div class="admin-content">
    <div class="admin-header">
      <h2>포장재 관리</h2>
      <div class="breadcrumb">
        <a href="">홈</a>
        <span class="bar">></span>
        <a href="">관리자</a>
        <span class="bar">></span>
        <a href="">기타정보 관리</a>
        <span class="bar">></span>
        <a href="">포장재 관리</a>
      </div>
    </div>

    <div class="admin-body">
      <div class="row px-4 bg-white mb-12">
        <div class="box">
          <form action="">
            <div class="form form--admin">
              <div class="form__row px-0">
                <div class="input-group flex-1">
                  <div class="input-inn flex justify-between mb-3">
                    <div class="select">
                      <select name="" id="">
                        <option value="">등록일</option>
                      </select>
                    </div>
                    <div class="datepicker-wrap w-340">
                      <div class="input_box flex items-center">
                        <input type="text" class="datepicker" readonly placeholder="YYYY-MM-DD">
                      </div>
                      <span>-</span>
                      <div class="input_box flex items-center">
                        <input type="text" class="datepicker" readonly placeholder="YYYY-MM-DD">
                      </div>
                    </div>
                    <div class="radio-wrap">
                      <label for="dateAll" class="radio-type2">
                        <input type="radio" hidden="" id="dateAll" name="date">
                        <span>전체기간</span>
                      </label>
                      <label for="date1" class="radio-type2">
                        <input type="radio" hidden="" id="date1" name="date" checked>
                        <span>1개월</span>
                      </label>
                      <label for="date2" class="radio-type2">
                        <input type="radio" hidden="" id="date2" name="date">
                        <span>3개월</span>
                      </label>
                      <label for="date3" class="radio-type2">
                        <input type="radio" hidden="" id="date3" name="date">
                        <span>6개월</span>
                      </label>
                      <label for="date4" class="radio-type2">
                        <input type="radio" hidden="" id="date4" name="date">
                        <span>1년</span>
                      </label>
                    </div>
                  </div>
                  <div class="input-inn flex">
                    <div class="select">
                      <select name="" id="">
                        <option value="">포장재명</option>
                      </select>
                    </div>
                    <div class="input_box mx-2 w-340">
                      <input type="text">
                    </div>
                    <a href="" class="button bg-blue color-white btn-lg">검색</a>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="row mb-12">
        <div class="title">
          <div class="action-button flex">
            <a href="" class="button btn color-white bg-gray">전체선택</a>
            <a href="" class="button btn color-gray border-gray bg-white">선택해제</a>
            <a href="" class="button color-white bg-blue btn">포장재 등록</a>
            <a href="" class="button border-blue btn color-blue bg-white">포장재 삭제</a>
          </div>
          <p class="ml-auto">
            총 검색건수 <span>0</span>건의 내역이 있습니다.
          </p>
        </div>
        <div class="box bg-white scroll-box">
          <div class="table">
            <table>
              <colgroup>
                <col width="50">
                <col width="40">
                <col>
                <col>
                <col>
                <col width="60">
                <col>
                <col width="90">
                <col>
              </colgroup>
              <thead>
                <tr>
                  <th>선택</th>
                  <th>순번</th>
                  <th>분류</th>
                  <th>포장재코드</th>
                  <th>사용구분</th>
                  <th>용량</th>
                  <th>포장재명</th>
                  <th>포장재마킹</th>
                  <th>포장재 등록일</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td colspan="9" class="data-null">검색된 포장재 내역이 없습니다.</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row px-4 bg-white">
        <div class="title border-b">
          <div class="action-button flex ml-auto">
            <a href="" class="button border-blue color-blue btn">포장재 삭제</a>
            <a href="" class="button color-lightgray border-gray bg-lightgray btn">저장</a>
          </div>
        </div>
        <div class="box">
          <form action="">
            <div class="form form--admin">
              <div class="form__row border-b">
                <div class="col col_fixed w-1/3 pr-4 ml-0">
                  <div class="form-title">
                    <span>
                      분류
                      <i>*</i>
                    </span>
                  </div>
                  <div class="select flex-1">
                    <select name="" id="" readonly>
                      <option value="">선택</option>
                    </select>
                  </div>
                </div>
                <div class="col col_fixed w-2/3 ml-0">
                  <div class="form-title">
                    <span>
                      포장재 코드
                      <i>*</i>
                    </span>
                  </div>
                  <div class="input_box mr-3">
                    <input type="text">
                  </div>
                  <a href="" class="button btn-lg disabled">바코드 출력</a>
                </div>
              </div>
              <div class="form__row border-b">
                <div class="col col_fixed w-1/3 ml-0 pr-4">
                  <div class="form-title">
                    <span>
                      사용구분
                      <i>*</i>
                    </span>
                  </div>
                  <div class="select flex-1">
                    <select name="" id="" readonly>
                      <option value="">선택</option>
                    </select>
                  </div>
                </div>
                <div class="col col_fixed w-1/3 ml-0 pr-4">
                  <div class="form-title">
                    <span>
                      포장재명
                      <i>*</i>
                    </span>
                  </div>
                  <div class="input_box">
                    <input type="text" readonly>
                  </div>
                </div>
                <div class="col col_fixed w-1/3 ml-0">
                  <div class="form-title">
                    <span>
                      용량 
                      <i>*</i>
                    </span>
                  </div>
                  <div class="input_box">
                    <input type="text" readonly placeholder="약재명 / 10 g">
                  </div>
                </div>
              </div>
              <div class="form__row border-b">
                <div class="col col_fixed w-1/3 ml-0 pr-4">
                  <div class="form-title">
                    <span>
                      포장재 마킹
                      <i>*</i>
                    </span>
                  </div>
                  <div class="select flex-1">
                    <select name="" id="" readonly>
                      <option value="">선택</option>
                    </select>
                  </div>
                </div>
                <div class="col col_fixed w-1/3 ml-0 pr-4">
                  <div class="form-title">
                    <span>
                      가격
                      <i>*</i>
                    </span>
                  </div>
                  <div class="input_box flex items-center readonly">
                    <input type="text" class="flex-1 text-right" readonly>
                    <span>원</span>
                  </div>
                </div>
                <div class="col col_fixed w-1/3 ml-0">
                  <div class="form-title">
                    <span>
                      사이즈 (cm)<br/>
                      <small>*가로x세로x높이</small>
                    </span>
                  </div>
                  <div class="input_box">
                    <input type="text" readonly>
                  </div>
                </div>
              </div>
              <div class="form__row">
                <div class="col">
                  <div class="form-title">
                    <span>이미지 첨부</span>
                  </div>
                  <div class="file-wrap flex items-center flex-1">
                    <input class="upload-name mr-3" type="text" readonly>
                    <label for="file" class="button btn-lg disabled">파일찾기</label>
                    <input type="file" id="file">
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

{% endblock %}